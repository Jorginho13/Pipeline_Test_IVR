import groovy.json.JsonSlurperClassic

def jsonParse(def json) {
    new groovy.json.JsonSlurperClassic().parseText(json)
}
pipeline {
  agent any
  
  environment{
	JAVA_COMMAND = "java -jar jenkinsSTARC.jar"
  }
  
  stages {

 stage("paso 1"){
     
      steps {
		dir("files"){
			echo "probando ${JAVA_COMMAND}"
		}
      }
    }
  }
  post {
      always {          
          deleteDir()
           sh "echo 'fase always'"
      }
      success {
            sh "echo 'fase success'"
        }

      failure {
            sh "echo 'fase failure'"
      }
      
  }
}